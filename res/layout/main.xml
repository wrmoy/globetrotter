<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    >





     
   
     

<Button android:id="@+id/tag_button" android:background="@drawable/tag_button" android:layout_width="wrap_content" android:gravity="bottom|center_horizontal" android:textColor="#FFFFFF" android:onClick="capture" android:layout_height="wrap_content" android:text="@string/tag" ></Button>
<Button android:id="@+id/view_button" android:background="@drawable/view_button" android:layout_width="wrap_content" android:gravity="bottom|center_horizontal" android:textColor="#FFFFFF" android:onClick="view" android:layout_height="wrap_content" android:text="@string/view" ></Button>



<Button android:id="@+id/debugViewer" android:layout_width="wrap_content" android:onClick="debugViewer" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Image Viewer"></Button>
</LinearLayout>